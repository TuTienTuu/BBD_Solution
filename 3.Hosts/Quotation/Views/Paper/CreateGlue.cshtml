@using ViewModels.Catalog.Glues
@model GlueCreateRequest


<div class="container-fluid shadow p-5">
    <form method="post" style="max-height:650px;">

        <div class="row pb-2">
            <h2 class="col-md-8">Tạo thông tin dao</h2>
            <div class="col-md-4">
                <button type="submit" class="btn btn-lg btn-primary p-2  float-right"><i class="bi bi-file-plus-fill"></i>Lưu</button>&nbsp;
                <a asp-controller="Paper" asp-action="GlueList" class="btn btn-lg btn-warning p-2  float-right">Trở lại</a>
            </div>
        </div>

        <div asp-validation-summary="All"></div>

        <div class="form-row">
            <div class="form-group col-md-2">
                <label asp-for="GlueCode"></label>
                <input type="text" class="form-control mb-1" asp-for="GlueCode">
                <span asp-validation-for="GlueCode" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-2">
                <label asp-for="GlueName"></label>
                <input type="text" class="form-control mb-1" asp-for="GlueName">
                <span asp-validation-for="GlueName" class=" alert-danger"></span>
            </div>

              <div class="form-group col-md-2">
                <label asp-for="GlueDescription"></label>
                <textarea type="text" class="form-control mb-1" asp-for="GlueDescription"></textarea>
                <span asp-validation-for="GlueDescription" class=" alert-danger"></span>
            </div>
        </div>

    </form>

</div>


@*//for front end validations*@

@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial" />
    }
}