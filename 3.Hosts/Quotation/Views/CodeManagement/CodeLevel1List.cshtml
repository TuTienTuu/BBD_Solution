            $("#codeLevel1Description").val();
            $("#codeLevel1Lenght").val(0);

       }
       else{
       var url = "/CodeManagement/CodeLV1ManagementDetail/" + id;

    $.ajax({
        type: "GET",
        url: url,
        async: true,
        //data: data,
        // async: false,
        contentType: 'application/json; charset=utf-8',
        success: function (mess) {
            console.log(mess);
            $('#ID').val(mess.resultObj.id);

            $("#codeLevel1").val(mess.resultObj.codeLevel1);
            $("#codeLevel1Description").val(mess.resultObj.codeLevel1Description);
